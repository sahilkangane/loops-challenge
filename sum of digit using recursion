#include<stdio.h>
#include<conio.h>

int sum(int a);
void main()
{
	int num, result;
	printf("Enter the number is : ");
	scanf("%d", &num);
	result = sum(num);
	printf("Sum of the digit in %d is %d\n",num ,result);
}

int sum(int num)
{
if(num!= 0)
	{
		return(num %10 + sum(num / 10));
	}
	else
		{
			return 0;
		}
}
